        <input class="txt" type="text" name="E-Mail" placeholder="abc@gmail.com" id="e-mail" required/><br><br>
        <label>Age of the Device : </label>&nbsp;&nbsp;
        <input class="txtsrt" placeholder="Years" type="number" />&nbsp;&nbsp;
