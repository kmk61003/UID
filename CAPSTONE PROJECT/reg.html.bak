          <option>Asus</option>
          <option>Jio</option>
          <option>Xiomi</option>
          <option>Sony</option>
          <option>Nokia</option>
          <option>LG</option>
          <option>Others</option>
        </select><br><br>
        <label>Model-Number : </label>&nbsp;&nbsp;
        <input type="text" class="txt" required><br><br>
        <label>Serial-Number : </label>&nbsp;&nbsp;
        <input type="text" class="txt" required><br><br>
        <label>Warranty : </label>&nbsp;&nbsp;
        <input type="checkbox" class="slider round" value="w" /><br><br>
        <label>Required Service : </label>&nbsp;&nbsp;
        <select required>
          <option default selected hidden>none</option>
          <option value="hydro">General Hardware</option>
          <option value="water">Display</option>
